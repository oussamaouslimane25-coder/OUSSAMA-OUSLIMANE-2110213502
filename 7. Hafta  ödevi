// Array de ekleme silme i≈ülemleri

#include <stdio.h>

int insertValue(int arr[], int size, int position, int value) {
    for (int i = size; i > position; i--) {
        arr[i] = arr[i - 1];
    }
    arr[position] = value;
    return size + 1;
}

int deleteValue(int arr[], int size, int position) {
    int removed = arr[position];

    for (int i = position; i < size - 1; i++) {
        arr[i] = arr[i + 1];
    }

    printf("Removed element: %d\n", removed);
    return size - 1;
}

int searchValue(int arr[], int size, int key) {
    for (int i = 0; i < size; i++) {
        if (arr[i] == key)
            return i;
    }
    return -1;
}

int main(void) {
  
    int array[100] = {21, 10, 2, 135, 2};
    int length = 5;

    length = insertValue(array, length, 3, 350);

    int index = searchValue(array, length, 350);
    if (index != -1)
        printf("350 found at index %d\n", index);

    length = deleteValue(array, length, 3);

    printf("Final Array: ");
    for (int i = 0; i < length; i++)
        printf("%d ", array[i]);
    printf("\n");

    return 0;
}
