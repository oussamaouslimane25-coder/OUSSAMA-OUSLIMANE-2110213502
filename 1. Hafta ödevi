//  Sparse matrix conversion

#include <stdio.h>



void convertToSparse(int matrix[4][4]) {
    int sparse[20][3];
    int count = 1;

    for (int row = 0; row < 4; row++) {
        for (int col = 0; col < 4; col++) {
            if (matrix[row][col] != 0) {
                sparse[count][0] = row;
                sparse[count][1] = col;
                sparse[count][2] = matrix[row][col];
                count++;
            }
        }
    }

    sparse[0][0] = 4;          // total rows
    sparse[0][1] = 4;          // total columns
    sparse[0][2] = count - 1;  // non-zero elements

    printf("Row  Col  Value\n");
    for (int i = 0; i < count; i++) {
        printf("%d    %d    %d\n",
               sparse[i][0],
               sparse[i][1],
               sparse[i][2]);
    }
}

int main(void) {
    int matrix[4][4] = {
        {0, 0, 3, 0},
        {0, 0, 0, 0},
        {0, 5, 0, 0},
        {0, 0, 0, 0}
    };

    convertToSparse(matrix);

    return 0;
}
